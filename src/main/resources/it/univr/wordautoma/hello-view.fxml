<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.wordautoma.HelloController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="btnNew" mnemonicParsing="false" onAction="#onNewClick" text="Nuovo Automa" />
                        <MenuItem mnemonicParsing="false" onAction="#OnSaveClick" text="Salva" />
                        <MenuItem mnemonicParsing="false" onAction="#onButtonClick" text="Open file" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox fx:id="windowBox" spacing="40.0">
            <children>
                <Pane fx:id="pane" maxWidth="400.0" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <VBox>
                            <children>
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onInserisciNodoClick" text="Aggiungi nodo" />
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onModificaNodoClick" text="Modifica nodo" />
                        <Button layoutX="10.0" layoutY="36.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEliminaNodoClick" text="Elimina Nodo" />
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSimulateClick" text="Simula" />
                        <Button layoutX="10.0" layoutY="62.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAggiungiArcoClick" text="Aggiungi Arco" />
                        <Button layoutX="10.0" layoutY="114.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onModificaArcoClick" text="Modifica Arco" />
                        <Button layoutX="10.0" layoutY="140.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEliminaArcoClick" text="Elimina Arco" />
                                <TextField id="simulateText" fx:id="simulateText" maxWidth="1.7976931348623157E308" promptText="Sequenza di caratteri da testare" />
                                <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Play" textAlignment="CENTER">
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                      <ImageView fx:id="graph" pickOnBounds="true" preserveRatio="true" />
                  <Text fx:id="message" strokeType="OUTSIDE" strokeWidth="0.0">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
