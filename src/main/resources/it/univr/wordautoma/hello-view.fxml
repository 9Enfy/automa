<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.wordautoma.HelloController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="btnNew" mnemonicParsing="false" onAction="#onNewClick" text="Nuovo Automa" />
                  <MenuItem mnemonicParsing="false" onAction="#OnSaveClick" text="Salva" />
                  <MenuItem mnemonicParsing="false" onAction="#onButtonClick" text="Open file" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox spacing="40.0">
         <children>
            <Pane maxWidth="400.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox minWidth="-Infinity">
                     <children>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onButtonClick" text="Aggiungi nodo" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Modifica nodo" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onSimulateClick" text="Simula" />
                        <TextField id="simulateText" fx:id="simulateText" maxWidth="1.7976931348623157E308" promptText="Sequenza di caratteri da testare" />
                        <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Play" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </Pane>
            <ImageView fx:id="graph" fitHeight="1080.0" fitWidth="1600.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
